    <div class="card" style="margin-top: 1rem;">
        <div class="card-header">
            <h2>Login</h2>
        </div>
        <div class="card-body">
            <form action="/authenticate" method="post">
                <input class="form-control" style="margin-bottom: 1rem;" type="text" name="login" placeholder="Login...">
                <input class="form-control" style="margin-bottom: 1rem;" type="password" name="password" placeholder="Password...">
                <button class="btn btn-success btn-block" type="submit">Login!</button>
            </form>
        </div>
    </div>
</div>

