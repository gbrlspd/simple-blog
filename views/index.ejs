<div class="container">
    <% articles.forEach(article => { %>
        <div class="card" style="margin: 1rem 0;">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Read...</a>
            </div>
        </div>
    <% }) %>
    <div class="row">
        <a href="/articles/page/2" style="text-decoration: none;">Next ></a>
    </div>
</div>

